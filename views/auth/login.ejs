<div class="container">
    <div class="row" style="margin-top: 10%">
      <h3 class="top-margin zero-margins zero-paddings white-font">REIGNdeer</h3>
      <p class="white-font zero-paddings">
        Login to start sending parcels the smart way.
      </p>
    </div>
    <form action="/auth/login" method="POST">

      <div class="row">

        <div class="eight columns offset-by-two">
          <label for="loginEmail" class="white-font">Email</label>
          <input class="u-full-width" type="text" name="email" id="loginEmail">
        </div>

      </div>

      <div class="row">
        <div class="eight columns offset-by-two">
          <label for="loginPassword" class="white-font">Password</label>
          <input class="u-full-width" type="password" name="password" id="loginPassword">
        </div>
      </div>

      <input class="button-primary" type="submit" value="Submit">
    </form>
      <a href="/auth/signup"><button type="button" class="white-text-white-border-button">Create new account</button></a>
  </div>
</div>
